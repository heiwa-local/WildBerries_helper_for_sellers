<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4000000">
    tools:context="com.example.WildBeries4.Presentation.View.OpenStatistic

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/fullPriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#68000000"
            android:gravity="center"
            android:text="Стоимость всей поставки"
            android:textColor="#D3FFFFFF" />

        <TextView
            android:id="@+id/tvFullPriceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="#75FFFFFF"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/volumeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#68000000"
            android:gravity="center"
            android:text="Количество единиц товаров"
            android:textColor="#D3FFFFFF" />

        <TextView
            android:id="@+id/tvVolumeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="#75FFFFFF"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/onePriceText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#68000000"
            android:gravity="center"
            android:text="Цена за штуку"
            android:textColor="#D3FFFFFF" />

        <TextView
            android:id="@+id/tvOnePriceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="#75FFFFFF"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/procentText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#68000000"
            android:gravity="center"
            android:text="Комиссия WildBerries"
            android:textColor="#D3FFFFFF" />

        <TextView
            android:id="@+id/tvProcentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="#75FFFFFF"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/logisticText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#68000000"
            android:gravity="center"
            android:text="Стоимость логистики"
            android:textColor="#D3FFFFFF" />

        <TextView
            android:id="@+id/tvLogisticView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="#75FFFFFF"
            android:textSize="40dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>