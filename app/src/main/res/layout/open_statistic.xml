<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C4000000">
    tools:context="com.example.WildBeries4.Presentation.View.OpenStatistic

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvDataView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#86000000"
            android:gravity="center"
            android:text="TextView"
            android:textColor="#D3FFFFFF"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/fullPriceText"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="#68000000"
                android:gravity="center"
                android:shadowColor="#CA2020"
                android:text="Стоимость всей поставки"
                android:textColor="#D3FFFFFF"
                android:textColorHighlight="#AF2C2C" />

            <TextView
                android:id="@+id/tvFullPriceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:background="#2A000000"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="1"
                android:textColor="#75FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/volumeText"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="#68000000"
                android:gravity="center"
                android:text="Количество единиц товаров"
                android:textColor="#D3FFFFFF" />

            <TextView
                android:id="@+id/tvVolumeView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right|center_vertical"
                android:background="#2A000000"
                android:gravity="center"
                android:text="1"
                android:textColor="#75FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/onePriceText"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="#68000000"
                android:gravity="center"
                android:text="Цена за штуку"
                android:textColor="#D3FFFFFF" />

            <TextView
                android:id="@+id/tvOnePriceView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#2A000000"
                android:gravity="center"
                android:text="1"
                android:textColor="#75FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/procentText"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="#68000000"
                android:gravity="center"
                android:text="Комиссия WildBerries"
                android:textColor="#D3FFFFFF" />

            <TextView
                android:id="@+id/tvProcentView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#2A000000"
                android:gravity="center"
                android:text="1"
                android:textColor="#75FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/logisticText"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="#68000000"
                android:gravity="center"
                android:text="Стоимость логистики"
                android:textColor="#D3FFFFFF" />

            <TextView
                android:id="@+id/tvLogisticView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="#2A000000"
                android:gravity="center"
                android:text="1"
                android:textColor="#75FFFFFF"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnAddToCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add to calendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>